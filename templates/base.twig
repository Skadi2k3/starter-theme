<!doctype html>
<html {{ site.language_attributes }}>
<head>
	<meta charset="{{ site.charset }}" />
	<meta name="description" content="{{ site.description }}">
	<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<link rel="author" href="{{ site.theme.link }}/humans.txt" />
	<link rel="pingback" href="{{ site.pingback_url }}" />
	<link rel="profile" href="http://gmpg.org/xfn/11">

	{{function('wp_head')}}
</head>

<body class="{{ body_class }}" data-template="base.twig">
	<header class="header container">
		<div class="row">
			<div class="col-12">
				<a class="skip-link screen-reader-text" href="#content">{{ _e( 'Skip to content') }}</a>
			</div>
		</div>
		<div class="row">
			<div class="col-12">
				{% include 'partials/navigation.twig' %}
			</div>
		</div>
	</header>

	<div id="content" class="content-wrapper container">
		<div class="row">
			<main class="{% if sidebar %} col-9{% else %}col-12{% endif %}">
				{% if title %}<h1>{{title}}</h1>{% endif %}
				<div class="wrapper {{ sidebar_class }}">
					{% block content %}
						Sorry, no content
					{% endblock %}
				</div>
			</main>

			{% if sidebar %}
				<aside class="layout-sidebar col-3">
					{{ sidebar }}
				</aside>
			{% endif %}
		</div>
	</div>

	{% include 'partials/footer.twig' with global_content %}

	{{ function('wp_footer') }}
</body>
</html>
