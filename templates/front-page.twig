{% extends "base.twig" %}

{% block content %}
	<hr>
	<h2>This is the Homepage generated by (templates/{{ _self }})</h2>

	<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
		<section class="article-content">
			<h1 class="article-h1">{{post.title}}</h1>
			<div class="article-body">
				{{post.content}}

				{% for entry in post.meta('blocks') %}
					{% include './modules/%s.twig'|format(entry.acf_fc_layout) with entry %}
				{% endfor %}
			</div>
		</section>
	</article>

	{% include 'partials/posts.twig' %}

	<p>The Home content ends now</p>
	<hr>
{% endblock %}
